<!DOCTYPE html>
<html>
  <head>
    <title>SlowGram</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <%= link_to 'Slowgram', posts_path, class:"navbar-brand" %>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'New Post', new_post_path, class:'nav-link active'%>
              </li>
              <li class="nav-item">
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, class:'nav-link' %>
            </li>
            <% end %>
            <li class="nav-item">
                <%= link_to 'Login', new_user_session_path, class:'nav-link' %>
            </li>
          </ul>
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Looks cool, ain't work" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
